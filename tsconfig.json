{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "images": ["images"],
      "util/*": ["src/js/util/*"],
      "configs": ["configs"],
      "components/*": ["src/js/components/*"],
      "workers": ["src/js/workers"],
      "styles": ["src/scss/"],
      "componentStyles": ["src/scss/components/"]
    },
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
